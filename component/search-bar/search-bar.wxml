<view class="cu-bar search">
  <view class="search-form radius">
    <text class="cuIcon-search"></text>
    <input type="text" value="{{ value }}" placeholder="{{ placeholder }}" confirm-type="search" bindconfirm="toSearch" bindinput="setValue"></input>
    <text class="text-xl" catchtap="setValue" wx:if="{{ btn_clear && value }}"><text class="cuIcon-roundclose  text-gray"></text></text>    
  </view>
  <view class="action" catchtap="toSearch" wx:if='{{ btn_status }}'>
    <text>{{ btn_text }}</text>
  </view>
</view>