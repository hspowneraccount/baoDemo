<view class="cu-modal {{ show ? 'show' : '' }} {{ modalType }}" style='background: none;'>
  <view class="cu-modal {{ show ? 'show' : '' }}" catchtap="eventClose"></view>
  <view class="cu-dialog">
    <view class="bg-white cu-bar justify-end" wx:if='{{ title }}'>
      <view class="content">{{ title }}</view>
      <view class="action" catchtap="close" wx:if='{{ closeBtn }}'>
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <slot></slot>
    <view class="cu-bar bg-white justify-end" wx:if='{{ confirmBtn }}'>
      <view class="action">
        <button class="cu-btn line-green text-green" catchtap="close" wx:if='{{ cencelBtn }}'>取消</button>
        <button class="cu-btn bg-green margin-left" catchtap="confirm">确定</button>
      </view>
    </view>
  </view>
</view>